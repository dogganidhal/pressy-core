  "version": "0.2.0",
  "configurations": [
		{
			"name": "Laundry Api",
			"type": "node",
			"request": "launch",
			"args": [
				"${workspaceRoot}/src/index.laundry-api.ts"
			],
			"runtimeArgs": [
				"-r",
				"ts-node/register"
			],
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
			"internalConsoleOptions": "openOnSessionStart",
			"env": {
				"NODE_ENV": "local"
			}
		},
    {
			"name": "Mobile Api",
      "type": "node",
			"request": "launch",
			"args": ["${workspaceRoot}/src/index.mobile-api.ts"],
			"runtimeArgs": ["-r", "ts-node/register"],
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
			"internalConsoleOptions": "openOnSessionStart",
			"env": {
				"NODE_ENV": "local"
			}
    },
    {
			"name": "Driver Api",
      "type": "node",
			"request": "launch",
			"args": ["${workspaceRoot}/src/index.driver-api.ts"],
			"runtimeArgs": ["-r", "ts-node/register"],
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
			"internalConsoleOptions": "openOnSessionStart",
			"env": {
				"NODE_ENV": "local"
			}
    },
    {
			"name": "Admin Api",
      "type": "node",
			"request": "launch",
			"args": ["${workspaceRoot}/src/index.admin-api.ts"],
			"runtimeArgs": ["-r", "ts-node/register"],
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
